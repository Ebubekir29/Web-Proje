<body>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar  ">
        <div class="layout-container">
            <!-- Menu -->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo ">
                    <a asp-action="Index" asp-controller="Admin" class="app-brand-link">
                        <span class="app-brand-text demo menu-text fw-bolder ms-3">Admin</span>
                    </a>
                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">

                    <li class="menu-item active">
                        <a asp-action="Index" asp-controller="User" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-user-circle"></i>
                            <div data-i18n="Analytics">Kullanıcılar</div>
                        </a>
                    </li>
                    <li class="menu-item active">
                        <a asp-action="Index" asp-controller="Category" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-category"></i>
                            <div data-i18n="Analytics">Kategoriler</div>
                        </a>
                    </li>
                    <li class="menu-item active">
                        <a asp-action="YemekTarifiGoruntule" asp-controller="Admin" class="menu-link">
                            <i class="menu-icon tf-icons bx bxs-paste"></i>
                            <div data-i18n="Analytics">Yemekler</div>
                        </a>
                    </li>
                    <li class="menu-item active">
                        <a asp-action="iletisimGoruntule" asp-controller="Admin" class="menu-link">
                            <i class="menu-icon tf-icons bx bxs-phone"></i>
                            <div data-i18n="Analytics">İletisim</div>
                        </a>
                    </li>
                    <li class="menu-item active">
                        <a asp-action="yorumGoruntule" asp-controller="Admin" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-comment"></i>
                            <div data-i18n="Analytics">Yorumlar</div>
                        </a>
                    </li>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarResponsive">
                            <ul class="navbar-nav flex-grow-1">

                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Hakkında">Hakkıında</a>
                                </li>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="drop_yazı" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        English
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" id="tr" href="#">Türkçe</a>
                                        <a class="dropdown-item" id="en" href="#">English</a>

                                    </div>
                                </div>

                                <li class="dropdown ms-auto">
                                    <a class="btn btn-secondary dropdown-toggle" role="button" data-bs-toggle="dropdown" asp-area="" asp-controller="Account" asp-action="Profile">
                                        <i class="menu-icon tf-icons bx bx-category"></i>
                                        @User.FindFirst("Username").Value
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="#" asp-controller="Account" asp-action="Profile">Profili Düzenle</a></li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                @RenderBody()
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>

    </div>

    <script src="~/sneat/assets/vendor/libs/jquery/jquery.js"></script>

@model yemekViewModel
@{
    ViewData["Title"] = "YemekTarifiEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="yemekIsmi" class="form-label">yemekIsmi</label>
                <input asp-for="yemekIsmi" class="form-control" placeholder="yemekIsmi" />
                <span asp-validation-for="yemekIsmi" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="yemeginKategorisi" class="form-label">yemeginKategorisi</label>
                <input asp-for="yemeginKategorisi" class="form-control" placeholder="yemeginKategorisi" />
                <span asp-validation-for="yemeginKategorisi" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="YemekTarifi" class="form-label">YemekTarifi</label>
                <input asp-for="YemekTarifi" class="form-control" placeholder="YemekTarifi" />
                <span asp-validation-for="YemekTarifi" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary"> <i class="fa-solid fa-save me-2"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>

@model IEnumerable<Commend>
@{
    ViewData["Title"] = "YorumGoruntule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row text-center">
    <div class="col">
        <h1 class="display-4" key=38>
            Yorumlar
        </h1>
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th key=14>Kullanıcı Adı</th>
                    <th key=39>Yorum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var yorum in Model)
                {
                    <tr>
                        <td>@yorum.Username</td>
                        <td>@yorum.Yorum</td>
                        <td class="text-end">
                            <a asp-action="DeleteYorum" asp-route-id="@yorum.id" onclick="return confirm('Yorumu silmek istediğinden emin misin : ?')" class="btn btn-danger btn-sm " key=43><i class="fa fa-trash me-2"></i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



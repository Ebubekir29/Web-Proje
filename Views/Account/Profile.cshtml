
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post" asp-action="ProfileChangePassword">
            <!--texlerin isimlerini düzenle-->
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label class="form-label small">Kullanıcı Adı</label>
                <div class="input-group mb-3">
                    <input name="Username" type="text" class="form-control" placeholder="Kullanıcı Adı" />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label small">Şifre</label>
                    <div class="input-group">
                        <input name="Password" type="password" class="form-control" placeholder="Şifre" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label small">Email</label>
                    <div class="input-group mb-3">
                        <input name="Email" type="email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="form-group mb-3 text-center">
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
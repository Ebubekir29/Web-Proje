@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<head>

    <meta charset="utf-8">

    <!-- Bootstrap core CSS -->
    <link href="~/templatemo/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--

    TemplateMo 546 Sixteen Clothing

    -->
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/templatemo/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/templatemo/assets/css/templatemo-sixteen.css">
    <link rel="stylesheet" href="~/templatemo/assets/css/owl.css">

</head>

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2" key=25>Giriş Yap</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4 mt-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label" key=14>Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label" key=19>Şifre</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Şifre" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block" key=25> <i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</button>
            </div>
        </form>
    </div>
</div>
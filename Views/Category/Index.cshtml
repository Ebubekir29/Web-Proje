@model IEnumerable<Category>
@{
    ViewData["Title"] = "Kategoriler";
}
<div class="row text-center">
    <div class="col">
        <h1 class="display-4">
            @ViewData["Title"]
        </h1>
    </div>
</div>


<div class="row mb-3">
    <div class="col">
        <a class="btn btn-primary btn-sm" asp-action="CreateCategory"><i class="fa fa-plus me-2"></i>Yeni Kategori</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td class="text-end">
                            <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-info btn-sm"><i class="fa fa-edit me-2"></i>Düzenle</a>
                            <a asp-action="DeleteCategory" asp-route-id="@category.Id" onclick="return confirm('Kategoriyi silmek istediğinden emin misin : @category.Name ?')" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
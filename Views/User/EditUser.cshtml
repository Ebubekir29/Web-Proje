@model User
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2" key=17>Kullanıcı Düzenle</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label" key=14>Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label" key=9>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label" key=16>Rol</label>
                <select asp-for="Role" class="form-select">
                    <option value="" key=21>Lütfen Seçin</option>
                    <option value="admin" key=22>Admin</option>
                    <option value="user" key=23>Kullanıcı</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" key=11> <i class="fa-solid fa-save me-2"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>

